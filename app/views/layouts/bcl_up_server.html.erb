<!DOCTYPE html>
<html>
<head>
  <title>BCL-UP Server</title>

  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <!-- jQuery library -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <!-- Latest compiled JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <%= csrf_meta_tags %>

</head>

<body>
<section class="ld4l-identity" aria-label="Cornell" role="banner">
  <div id="skiptocontent"><a href="#maincontent">skip to main content</a></div>
  <div id="bc-header" class="container">
    <a class="header-link" href="<%= main_app.root_path %>"><img src="<%= image_url('bcl_up_server/BCL-UP1.png') %>" class="header-logo" ></a>
  </div>
</section>

<div class="container">
  <nav id="masthead" class="navbar navbar-inverse navbar-static-top" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <ul class="nav-menu">
          <% BclUpServer.config.navmenu_presenter.leftmenu_items.each do |item| %>
            <li class='left-menu'><%= link_to item[:label], item[:url] %></li>
          <% end %>
          <% BclUpServer.config.navmenu_presenter.rightmenu_items.each do |item| %>
            <li class='right-menu'><%= link_to item[:label], item[:url] %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</div>

<div id="content-wrapper" class="container" role="main">
  <a name="skip_to_content"></a>
  <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>
  <% if content_for?(:page_header) %>
      <div class="row">
        <div class="col-xs-12 main-header">
          <%= yield(:page_header) %>
        </div>
      </div>
  <% end %>

  <%= content_for?(:content) ? yield(:content) : yield %>
</div><!-- /#content-wrapper -->
<%= render 'shared/footer' %>
<%# = render 'shared/ajax_modal' %>
</body>
</html>
